<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" fx:controller="CurrencyConversionController">
    <Label text="Enter amount in dollars:" />
    <TextField fx:id="dollarsTextField" />
    <Button text="Convert" onAction="#convertDollarsToRupees" />
    <Label fx:id="resultLabel" />
</VBox>
